<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/pro_back"
    android:layout_gravity="center"
    tools:context=".SetProfile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/avtar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Information"
        android:layout_marginTop="90dp"
        android:textSize="20sp"
        android:textStyle="bold|normal"
        android:textColor="#BDA8F4"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please set your name and an optional Profile Image"
        android:padding="5dp"
        android:textSize="13sp"
        android:textStyle="bold|normal"
        android:textColor="#FDDADBDF"
        android:textAlignment="center"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            android:background="#BAACE4"
            android:layout_margin="15dp">
            <EditText
                android:id="@+id/nameBox"
                android:hint="Type Your Name"
                android:padding="10dp"
                android:ems="1"
                android:inputType="text"
                android:textSize="20sp"
                android:textStyle="bold|normal"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/continueBtn"
                android:text="Set Profile"
                android:textStyle="bold|normal"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>





</LinearLayout>


