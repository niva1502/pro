<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/black"
    android:layout_gravity="center"
    tools:context=".SetupProfile">


    <ImageView
        android:id="@+id/pro_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pro_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="169dp"
        android:layout_height="156dp"
        android:background="@drawable/profile_oval"
        android:src="@drawable/avtar"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pro_back"
        app:layout_constraintVertical_bias="0.55" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="407dp"
        android:layout_height="30dp"

        android:layout_marginBottom="32dp"
        android:text="Profile Information"
        android:textAlignment="center"
        android:textColor="#1DD5C3"
        android:textSize="26sp"

        android:textStyle="bold|normal"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pro_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"

        android:text="Please set your name and an option profile image"
        android:textAlignment="center"
        android:textColor="#F0F1F1"
        android:textSize="13sp"
        android:textStyle="bold|normal"
        app:layout_constraintBottom_toTopOf="@+id/profilename"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/profilename"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/pro_background"
        android:hint="    Type Your Name"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/profilebutton"
        app:layout_constraintEnd_toEndOf="@+id/profilebutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profilebutton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profilebutton"
        android:layout_width="301dp"
        android:layout_height="48dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/pro_button"
        android:text="Set Up Profile"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/pro_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


